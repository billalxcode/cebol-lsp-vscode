{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Cebol Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"name": "constant.numeric.cebol",
			"match": "\\b\\d+(\\.\\d+)?\\b"
		},
		{
			"name": "variable.other.cebol"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cebol",
					"match": "\\b(jika|lainnya|selama|atur|untuk|kembalikan|program)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.cebol",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cebol",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line.double-slash.cebol",
			"begin": "#",
			"end": "$"
		},
		"blockComments": {
			"name": "comment.block.cebol",
			"begin": "###",
			"end": "###"
		},
		"variable.other.cebol": {
			"name": "variable.other.cebol",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
		}
	},
	"scopeName": "source.cebol"
}